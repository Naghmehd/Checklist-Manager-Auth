<h2><%= @task.title %><small><%= 'published' if @task.published? %></small></h2>
<% if @task.id > 1 %>
  <%= link_to "Previous task", task_path(@task.prev), class: 'btn btn-default' %>
<% else %>
  <%= link_to "Last task", task_path(@task.prev), class: 'btn btn-default' %>
<% end %>

<% if @task.id < task.count %>
  <%= link_to "Next task", task_path(@task.next), class: 'btn btn-default' %>
<% else %>
  <%= link_to "First task", task_path(@task.next), class: 'btn btn-default' %>
<% end %>

<% if signed_in? %>
  <% unless @task.published? %>
    <%= link_to "PUBLISH", publish_task_path(@task), method: :PUT, class: 'btn btn-info btn-large' %>
  <% end %>

  <%= link_to "Edit", edit_task_path(@task), class: 'btn btn-success' %>
  <span class='spacer'></span>
  <%= link_to "Destroy", task_path(@task), method: :DELETE, data: { confirm: "Are you sure you want to delete this task?" }, class: 'btn btn-danger' %>
<% end %>

<hr />
<section>
  <%= @task.body %>
</section>
